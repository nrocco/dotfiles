## set the tab size and soft spaces
set tabsize 2
set tabstospaces

## Use auto-indentation
#set autoindent

## Constantly display the cursor position in the status bar.
set const

## Allow multibuffer (Meta-F)
## This is actually extremely useful. If this option isn.t active, the crtl+r (read file)
## just adds the file into the same buffer. With it, it opens a new buffer!
## You can cicle through the buffers with Meta+< and Meta+>
set multibuffer

## Text will scroll line-by-line, instead of the usual chunk-by-chunk behavior.
set smooth

## Enable soft line wrapping for easier viewing of very long lones.
set softwrap

## Default Syntax highlighting for all files
syntax "default"
color green "^#.*"
color brightgreen "^##.*"
color yellow "^###.*"
color green "^[ \t]*#.*"


## Test
syntax "rocco" "\.rocco$"
color white   "^white$"
color brightwhite   "^brightwhite$"
color black   "^black$"
color brightblack   "^brightblack$"
color red     "^red$"
color brightred     "^brightred$"
color blue    "^blue$"
color brightblue    "^brightblue$"
color green   "^green$"
color brightgreen   "^brightgreen$"
color yellow  "^yellow$"
color brightyellow  "^brightyellow$"
color magenta "^magenta$"
color brightmagenta "^brightmagenta$"
color cyan    "^cyan$"
color brightcyan    "^brightcyan$"


## SQL Syntax highlighting
syntax "sql" "\.sql$"
icolor green "(all |and |any |as |asc |avg |between |by |cast |corresponding |count |create |cross |delete |desc |distinct |drop |escape |except |exists |false |from |full |global |group |having |in |inner |insert |intersect |into |is |join |left |like |local |match |max |min |natural |not |null |on |or |order |outer |right |select |set |some |sum |table |temporary |true |union |unique |unknown |update |using |values |where )"
# catches: tablename.columnname
icolor yellow "\b(\w+?)\.(\w+)\b"
# comments
color brightcyan "(--).*$\n?"
color brightcyan "(#).*$\n?"



