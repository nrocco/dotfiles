[user]
    name = Nico Di Rocco
    email = n.dirocco@global.leaseweb.com
[core]
    editor = vim
    excludesfile = ~/.gitignore
[color]
    ui = true
    diff = auto
    status = auto
    branch = auto
[blame]
    date = short
[merge]
    tool = vimdiff
[alias]
    everything = "! f() { git fetch --all --prune && git fetch --tags --prune; }; f"
    st = status
    unstage = reset HEAD --
    prepush = log --name-status --branches --not --remotes
    slist = stash list
    lg = log --graph --pretty=format:'%C(yellow)%h %C(black)%ci%C(reset) %s %C(black)by %an%C(reset)% C(green)%d%C(reset)' --date-order --color --all
    last = "!git --no-pager log --oneline -1"
    mirror = "!f() { local cur_branch=$(git rev-parse --abbrev-ref HEAD); git --version | grep 'git version 1.7' > /dev/null && git branch --set-upstream $cur_branch ${1:-origin}/$cur_branch || git branch --set-upstream-to=${1:-origin}/$cur_branch $cur_branch; }; f"
    review = "!f() { local cur_branch=${2-$(git rev-parse --abbrev-ref HEAD)}; git remote -v | sed -n \"/fetch/s%^.*git.ocom.com/\\([^/]*\\)/\\([^.]*\\).*$%https://git.ocom.com/projects/\\1/repos/\\2/compare/diff?targetBranch=${1:-master}\\&sourceBranch=${cur_branch}%p\"; }; f"
    comm = commit -v
    padd = add -p
    pcheckout = checkout -p
    ide = !ide
    ctags = !git ide ctags
    ctrlp = !git ide ctrlp
    warmup = "!f() { git ide ctags; git ide ctrlp; }; f"
    phpchecker = "!f() { git ls-files $@ | grep -E php | phpchecker; }; f"
    latest-tags = "!f() { git tag -l|sort -V|tail; }; f"
[push]
    default = current
[pull]
    rebase = true
[ide "ctrlp"]
    warmup = true
[ide "ctags"]
    warmup = true
